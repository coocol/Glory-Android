<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="cc.coocol.jinxiujob.fragments.SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:id="@+id/paralax_scroll"
        app:layout_behavior="@string/navigation_item_job"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="6dp"
                android:textColor="#aa000000"
                android:text="隐私设置" />

            <android.support.v7.widget.CardView
                android:foreground="@drawable/gray_selector"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/background"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.SwitchCompat
                        android:text="其他求职者可浏览我的简历"
                        android:id="@+id/resume"
                        android:height="48dp"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <android.support.v7.widget.SwitchCompat
                        android:text="@string/action_settings"
                        android:layout_width="match_parent"
                        android:layout_marginTop="1dp"
                        android:height="48dp"
                        android:background="@android:color/white"
                        android:layout_height="match_parent" />


                    <android.support.v7.widget.SwitchCompat
                        android:text="@string/action_settings"
                        android:layout_width="match_parent"
                        android:height="48dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:layout_height="match_parent" />


                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>


    </ScrollView>


</FrameLayout>
